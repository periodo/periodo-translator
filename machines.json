{
  "app":
  {
    "app_name": "periodo-translator",
    "org_slug": "personal"
  },
  "machine":
  {
    "region": "iad",

    "config":
    {
      "image": "registry.fly.io/periodo-translator:v10",

      "guest":
      {
        "cpus": 1,
        "cpu_kind": "performance",
        "memory_mb": 2048
      },

      "env":
      {
        "HOSTNAME": "periodo-translator.internal",
        "IDLE_TIMEOUT": "120",
        "TO_TTL_DIR": "/to_ttl",
        "TO_CSV_DIR": "/to_csv",
        "ERROR_DIR": "/err",
        "OUTPUT_DIR": "/out"
      },

      "processes":
      [
        {
          "name": "daemon",
          "entrypoint": ["java", "-Xms1024M", "-Xmx1024M", "-jar", "/daemon.jar"]
        },
        {
          "name": "server",
          "entrypoint": ["java", "-jar", "/server.jar"]
        }
      ]
    }
  }
}
